<scr:MyMacClass_noneMaxBtn x:Class="WpfClient.Teams.WinForCreateDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient.Teams"
        xmlns:scr="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="填写部门信息" Height="200" Width="300" Style="{DynamicResource WindowStyle2}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="部门名称：" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Name="txt_DepName" Grid.Row="0" Grid.Column="1" Margin="5" Height="30"/>
        <Button Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Right" Width="80" Height="30" Name="btn_CreateDep" Content="创建部门" Click="btn_CreateDep_Click" Foreground="White" Template="{DynamicResource ButtonControlTemplate1}"/>
    </Grid>
</scr:MyMacClass_noneMaxBtn>
