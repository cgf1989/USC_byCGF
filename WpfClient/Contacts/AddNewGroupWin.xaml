<Window x:Class="WpfClient.Contacts.AddNewGroupWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient.Contacts"
        mc:Ignorable="d"
        Title="添加分组" Height="150" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" FontSize="15" Text="请输入分组名:" Grid.Column="0"/>
        <TextBox Name="tb_GroupName" Height="30" Margin="10" Grid.Column="1"/>
        <Border Grid.Row="1" Grid.Column="1" CornerRadius="8" BorderThickness="2" BorderBrush="Gray" Width="80" Height="30" HorizontalAlignment="Right" Margin="10,0,10,10">
            <Button Name="btn_Confirm"  Content="确定" FontSize="15" VerticalAlignment="Center" Click="btn_Confirm_Click"/>
        </Border>
        
    </Grid>
</Window>
