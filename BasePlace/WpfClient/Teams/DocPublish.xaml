<Window x:Class="WpfClient.Teams.DocPublish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="文档传输" Height="98" Width="320" >
    <StackPanel Height="auto" >
        <WrapPanel Margin="5">
            <Label Content="文件名："/>
            <TextBox x:Name="DocText" Width="196"/>
            <Button Content="浏览" />
        </WrapPanel>
        <StatusBar >
            <StatusBarItem HorizontalAlignment="Right" Height="34">
                <Button Content="上传" Height="28" Width="50" />
            </StatusBarItem>
        </StatusBar>
    </StackPanel>
</Window>
